{% extends 'base.html.twig' %}

{% block title %}Ticket App - Home{% endblock %}

{% block body %}
<div class="container mx-auto">
    <div class="hero">
        <div class="decorative-circle circle-large" style="top: 20%; left: 10%;"></div>
        <div class="decorative-circle circle-medium" style="bottom: 15%; right: 15%;"></div>
        <svg class="wave-svg" viewBox="0 0 1200 300" preserveAspectRatio="none">
            <path d="M0,280 L0,300 L1200,300 L1200,280 C1000,200 800,350 600,280 C400,210 200,300 0,280 Z" fill="#f8fafc"/>
        </svg>
        <div class="hero-content">
            <div class="container">
                <h1 class="text-4xl font-bold mb-4">Ticket Management App</h1>
                <p class="text-xl mb-8">Manage your tickets efficiently with our powerful platform</p>
                <div class="flex gap-4 justify-center">
                    <a href="/auth/login" class="btn btn-primary">Login</a>
                    <a href="/auth/signup" class="btn btn-outline-primary">Get Started</a>
                </div>
            </div>
        </div>
    </div>

    <div class="features py-16">
        <div class="container">
            <h2 class="text-3xl font-bold text-center mb-12">Features</h2>
            <div class="grid">
                <div class="card text-center">
                    <h3 class="text-xl font-semibold mb-4">Create Tickets</h3>
                    <p>Easily create and assign tickets with detailed information and priority levels.</p>
                </div>
                <div class="card text-center">
                    <h3 class="text-xl font-semibold mb-4">Track Progress</h3>
                    <p>Monitor ticket status in real-time with our intuitive dashboard.</p>
                </div>
                <div class="card text-center">
                    <h3 class="text-xl font-semibold mb-4">Resolve Issues</h3>
                    <p>Quickly resolve tickets and keep your team productive and organized.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}